            document.getElementsByClassName('bottlebox5')[1].classList.add('hidden');
            document.getElementsByClassName('bottlebox6')[1].classList.add('hidden');
            document.getElementsByClassName('bottlebox7')[1].classList.add('hidden');
        }

        var areas = document.querySelectorAll('area');
        for (var i = 0; i < areas.length; i++) {
            areas[i].addEventListener("click", function (e) {
                e.preventDefault();
            });
        }
    </script>
}